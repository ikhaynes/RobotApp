<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/yellow_robot_large"
        android:contentDescription="@string/yellow_content_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/robot_yellow_large" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:gravity="center">


        <ImageView
            android:id="@+id/red_robot_large"
            android:contentDescription="@string/red_content_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/robot_red_large" />



        <ImageView
            android:id="@+id/white_robot_large"
            android:contentDescription="@string/white_content_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/robot_white_large" />
    </LinearLayout>
    <TextView
        android:id="@+id/robot_turn_text"
        android:contentDescription="@string/robot_turn_content_description"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center"
        android:textSize="24sp"/>


    <Button
        android:id="@+id/purchase_reward"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:text="@string/robot_purchase_activity_button" />


</LinearLayout>